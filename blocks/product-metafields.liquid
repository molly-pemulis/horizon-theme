{% comment %}
  GENERIC METAFIELD DISPLAY BLOCK
  ================================
  Shows product metafields in a clean specs table format.
  Works for ANY product type - fins, boards, apparel, etc.
  
  Just assign metafields to products in Shopify admin.
  If metafield exists and has value → it shows.
  If metafield is empty or doesn't exist → nothing shows.
  
  No product-type conditionals. No hardcoded field names.
{% endcomment %}

{% liquid
  assign product = closest.product
  if product == blank and request.visual_preview_mode
    assign product = collections.all.products.first
  endif
%}

{% if product.metafields.custom != blank %}
  <div 
    class="product-metafields"
    {{ block.shopify_attributes }}
  >
    {% if block.settings.show_heading and block.settings.heading != blank %}
      <h3 class="product-metafields__heading {{ block.settings.heading_size }}">
        {{ block.settings.heading }}
      </h3>
    {% endif %}
    
    <dl class="product-metafields__list">
      {% for metafield in product.metafields.custom %}
        {% if metafield.value != blank %}
          <div class="product-metafields__item">
            <dt class="product-metafields__label">
              {{ metafield.key | replace: '_', ' ' | capitalize }}
            </dt>
            <dd class="product-metafields__value">
              {% case metafield.type %}
                {% when 'boolean' %}
                  {% if metafield.value %}Yes{% else %}No{% endif %}
                {% when 'list.single_line_text_field' %}
                  {{ metafield.value | join: ', ' }}
                {% when 'rich_text_field' %}
                  {{ metafield.value | metafield_tag }}
                {% when 'file_reference' %}
                  {% if metafield.value.media_type == 'IMAGE' %}
                    <img 
                      src="{{ metafield.value | image_url: width: 200 }}" 
                      alt="{{ metafield.key }}"
                      loading="lazy"
                      width="200"
                    >
                  {% endif %}
                {% when 'url' %}
                  <a href="{{ metafield.value }}" target="_blank" rel="noopener">
                    {{ metafield.value | truncate: 40 }}
                  </a>
                {% else %}
                  {{ metafield.value }}
              {% endcase %}
            </dd>
          </div>
        {% endif %}
      {% endfor %}
    </dl>
  </div>
{% endif %}

{% stylesheet %}
  .product-metafields {
    width: 100%;
  }
  
  .product-metafields__heading {
    margin-bottom: var(--margin-sm);
  }
  
  .product-metafields__list {
    display: grid;
    gap: var(--gap-xs);
    margin: 0;
  }
  
  .product-metafields__item {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--gap-md);
    padding: var(--padding-xs) 0;
    border-bottom: 1px solid rgb(var(--color-foreground-rgb) / var(--opacity-10));
  }
  
  .product-metafields__item:last-child {
    border-bottom: none;
  }
  
  .product-metafields__label {
    font-weight: var(--font-weight-semibold);
    color: rgb(var(--color-foreground-rgb) / var(--opacity-70));
    flex-shrink: 0;
  }
  
  .product-metafields__value {
    margin: 0;
    text-align: right;
  }
  
  .product-metafields__value img {
    max-width: 100%;
    height: auto;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product specs",
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "Displays all custom metafields from the product. Metafields must be in the 'custom' namespace."
    },
    {
      "type": "checkbox",
      "id": "show_heading",
      "label": "Show heading",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Specifications"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h4", "label": "Small" },
        { "value": "h3", "label": "Medium" },
        { "value": "h2", "label": "Large" }
      ],
      "default": "h4"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Product specs",
      "category": "Product"
    }
  ]
}
{% endschema %}
