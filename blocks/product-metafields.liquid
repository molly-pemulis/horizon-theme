{% comment %}
  DYNAMIC METAFIELD DISPLAY
  =========================
  Only renders metafields that actually exist on this product.
  No empty checks for fields that don't exist.
{% endcomment %}

{% liquid
  assign product = closest.product
  if product == blank and request.visual_preview_mode
    assign product = collections.all.products.first
  endif
  
  # Get JSON of custom metafields - this contains only fields WITH values
  assign custom_json = product.metafields.custom | json
%}

{% if custom_json != '{}' and custom_json != 'null' and custom_json != blank %}
  <div 
    class="product-metafields"
    {{ block.shopify_attributes }}
  >
    {% if block.settings.show_heading and block.settings.heading != blank %}
      <h3 class="product-metafields__heading {{ block.settings.heading_size }}">
        {{ block.settings.heading }}
      </h3>
    {% endif %}
    
    <dl class="product-metafields__list" data-metafields>
      {% comment %} Populated by JavaScript from actual metafield data {% endcomment %}
    </dl>
  </div>
  
  <script type="application/json" data-product-metafields>
    {{ custom_json }}
  </script>
  
  <script>
    (function() {
      const dataEl = document.querySelector('[data-product-metafields]');
      const listEl = document.querySelector('[data-metafields]');
      if (!dataEl || !listEl) return;
      
      try {
        const metafields = JSON.parse(dataEl.textContent);
        
        // Skip these internal/system fields
        const skipFields = ['country_of_origin'];
        
        // Nice label formatting
        const formatLabel = (key) => {
          return key
            .replace(/_/g, ' ')
            .replace(/\b\w/g, c => c.toUpperCase());
        };
        
        let html = '';
        for (const [key, value] of Object.entries(metafields)) {
          if (skipFields.includes(key)) continue;
          if (value === null || value === '' || value === undefined) continue;
          
          // Handle different value types
          let displayValue = value;
          if (typeof value === 'object' && value !== null) {
            // Could be rich text or other complex type
            displayValue = value.value || JSON.stringify(value);
          }
          
          html += `
            <div class="product-metafields__item">
              <dt class="product-metafields__label">${formatLabel(key)}</dt>
              <dd class="product-metafields__value">${displayValue}</dd>
            </div>
          `;
        }
        
        listEl.innerHTML = html;
      } catch(e) {
        console.error('Metafields parse error:', e);
      }
    })();
  </script>
{% endif %}

{% stylesheet %}
  .product-metafields {
    width: 100%;
  }
  
  .product-metafields__heading {
    margin-bottom: var(--margin-sm);
  }
  
  .product-metafields__list {
    display: grid;
    gap: var(--gap-xs);
    margin: 0;
  }
  
  .product-metafields__item {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--gap-md);
    padding: var(--padding-xs) 0;
    border-bottom: 1px solid rgb(var(--color-foreground-rgb) / var(--opacity-10));
  }
  
  .product-metafields__item:last-child {
    border-bottom: none;
  }
  
  .product-metafields__label {
    font-weight: var(--font-weight-semibold);
    color: rgb(var(--color-foreground-rgb) / var(--opacity-70));
    flex-shrink: 0;
  }
  
  .product-metafields__value {
    margin: 0;
    text-align: right;
    max-width: 60%;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product specs",
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "Dynamically displays all custom metafields that exist on this product."
    },
    {
      "type": "checkbox",
      "id": "show_heading",
      "label": "Show heading",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Specifications"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h4", "label": "Small" },
        { "value": "h3", "label": "Medium" },
        { "value": "h2", "label": "Large" }
      ],
      "default": "h4"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Product specs",
      "category": "Product"
    }
  ]
}
{% endschema %}
