{% comment %}
  GENERIC METAFIELD DISPLAY BLOCK
  ================================
  Shows product metafields in a clean specs table format.
  Works for ANY product type - fins, boards, apparel, etc.
  
  Just assign metafields to products in Shopify admin.
  If metafield exists and has value → it shows.
  If metafield is empty or doesn't exist → nothing shows.
{% endcomment %}

{% liquid
  assign product = closest.product
  if product == blank and request.visual_preview_mode
    assign product = collections.all.products.first
  endif
%}

<div 
  class="product-metafields"
  {{ block.shopify_attributes }}
>
  {% if block.settings.show_heading and block.settings.heading != blank %}
    <h3 class="product-metafields__heading {{ block.settings.heading_size }}">
      {{ block.settings.heading }}
    </h3>
  {% endif %}
  
  <dl class="product-metafields__list">
    {% comment %} 
      Loop through all custom metafields
      Shopify stores them as product.metafields.custom.<key>
      We access them via the json filter to get all keys
    {% endcomment %}
    
    {% assign custom_json = product.metafields.custom | json %}
    {% if custom_json != '{}' and custom_json != 'null' and custom_json != blank %}
      
      {% comment %} Known metafield keys - add more as needed {% endcomment %}
      {% assign metafield_keys = 'designer_name,designer_origin,designer_bio,fin_construction,rating_value,review_count,height,base,area,front_height,front_base,front_area,rear_height,rear_base,rear_area,brand_buying_guide,availability' | split: ',' %}
      
      {% for key in metafield_keys %}
        {% assign mf = product.metafields.custom[key] %}
        {% if mf.value != blank %}
          <div class="product-metafields__item">
            <dt class="product-metafields__label">
              {{ key | replace: '_', ' ' | capitalize }}
            </dt>
            <dd class="product-metafields__value">
              {% if mf.type == 'boolean' %}
                {% if mf.value %}Yes{% else %}No{% endif %}
              {% elsif mf.type == 'list.single_line_text_field' %}
                {{ mf.value | join: ', ' }}
              {% elsif mf.type == 'rich_text_field' or mf.type == 'multi_line_text_field' %}
                {{ mf.value }}
              {% else %}
                {{ mf.value }}
              {% endif %}
            </dd>
          </div>
        {% endif %}
      {% endfor %}
      
    {% endif %}
  </dl>
</div>

{% stylesheet %}
  .product-metafields {
    width: 100%;
  }
  
  .product-metafields__heading {
    margin-bottom: var(--margin-sm);
  }
  
  .product-metafields__list {
    display: grid;
    gap: var(--gap-xs);
    margin: 0;
  }
  
  .product-metafields__item {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--gap-md);
    padding: var(--padding-xs) 0;
    border-bottom: 1px solid rgb(var(--color-foreground-rgb) / var(--opacity-10));
  }
  
  .product-metafields__item:last-child {
    border-bottom: none;
  }
  
  .product-metafields__label {
    font-weight: var(--font-weight-semibold);
    color: rgb(var(--color-foreground-rgb) / var(--opacity-70));
    flex-shrink: 0;
  }
  
  .product-metafields__value {
    margin: 0;
    text-align: right;
  }
  
  .product-metafields__value img {
    max-width: 100%;
    height: auto;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product specs",
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "Displays custom metafields from the product."
    },
    {
      "type": "checkbox",
      "id": "show_heading",
      "label": "Show heading",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Specifications"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h4", "label": "Small" },
        { "value": "h3", "label": "Medium" },
        { "value": "h2", "label": "Large" }
      ],
      "default": "h4"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Product specs",
      "category": "Product"
    }
  ]
}
{% endschema %}
