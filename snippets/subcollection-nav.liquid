{%- comment -%}
  Subcollection Navigation â€” renders nav pills from collection metafields
  Replaces heavy filters block in main-collection.liquid
  Metafields: custom.subcollections, custom.subcollections_brands
{%- endcomment -%}

{%- liquid
  assign subcollections = collection.metafields.custom.subcollections.value
  assign subcollections_brands = collection.metafields.custom.subcollections_brands.value
-%}

{% if subcollections != blank or subcollections_brands != blank %}
  <nav class="subcollection-nav">
    {% if subcollections != blank %}
      <div class="subcollection-nav__group">
        <span class="subcollection-nav__label">Category</span>
        <ul class="subcollection-nav__list">
          {% for subcol in subcollections %}
            <li>
              <a href="{{ subcol.url }}" class="subcollection-nav__link">
                {{ subcol.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}

    {% if subcollections_brands != blank %}
      <div class="subcollection-nav__group">
        <span class="subcollection-nav__label">Brand</span>
        <ul class="subcollection-nav__list">
          {% for subcol in subcollections_brands %}
            <li>
              <a href="{{ subcol.url }}" class="subcollection-nav__link">
                {{ subcol.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
  </nav>
{% endif %}

{% style %}
  .subcollection-nav {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem 0;
  }
  .subcollection-nav__group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .subcollection-nav__label {
    font-weight: 600;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .subcollection-nav__list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .subcollection-nav__link {
    display: inline-block;
    padding: 0.5rem 1rem;
    border: 1px solid rgba(0,0,0,0.15);
    border-radius: 2rem;
    font-size: 0.85rem;
    text-decoration: none;
    transition: all 0.2s;
  }
  .subcollection-nav__link:hover {
    background: rgba(0,0,0,0.04);
    border-color: rgba(0,0,0,0.3);
  }
{% endstyle %}
