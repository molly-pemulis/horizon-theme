      "settings": {
        "columns": 2,
        "gap": 8,
        "image_height": 400
      },
      "blocks": {
        "image_1": {
          "type": "image",
          "settings": {
            "enlarge": true
          }
        },
        "image_2": {
          "type": "image",
          "settings": {}
        },
        "image_3": {
          "type": "image",
          "settings": {}
        },
        "image_4": {
