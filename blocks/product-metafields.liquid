{% comment %}
  PRODUCT METAFIELDS DISPLAY
  ==========================
  Renders all custom metafields that have values for this product.
{% endcomment %}

{% liquid
  assign product = closest.product
  if product == blank and request.visual_preview_mode
    assign product = collections.all.products.first
  endif
%}

<div 
  class="product-metafields"
  {{ block.shopify_attributes }}
>
  {% if block.settings.show_heading and block.settings.heading != blank %}
    <h3 class="product-metafields__heading {{ block.settings.heading_size }}">
      {{ block.settings.heading }}
    </h3>
  {% endif %}
  
  <dl class="product-metafields__list">
    {% if product.metafields.custom.designer_name.value != blank %}
      <div class="product-metafields__item">
        <dt class="product-metafields__label">Designer</dt>
        <dd class="product-metafields__value">{{ product.metafields.custom.designer_name.value }}</dd>
      </div>
    {% endif %}
    
    {% if product.metafields.custom.designer_origin.value != blank %}
      <div class="product-metafields__item">
        <dt class="product-metafields__label">Origin</dt>
        <dd class="product-metafields__value">{{ product.metafields.custom.designer_origin.value }}</dd>
      </div>
    {% endif %}
    
    {% if product.metafields.custom.designer_bio.value != blank %}
      <div class="product-metafields__item">
        <dt class="product-metafields__label">Designer Bio</dt>
        <dd class="product-metafields__value">{{ product.metafields.custom.designer_bio.value }}</dd>
      </div>
    {% endif %}
    
    {% if product.metafields.custom.fin_construction.value != blank %}
      <div class="product-metafields__item">
        <dt class="product-metafields__label">Construction</dt>
        <dd class="product-metafields__value">{{ product.metafields.custom.fin_construction.value }}</dd>
      </div>
    {% endif %}
    
    {% if product.metafields.custom.height.value != blank %}
      <div class="product-metafields__item">
        <dt class="product-metafields__label">Height</dt>
        <dd class="product-metafields__value">{{ product.metafields.custom.height.value }}</dd>
      </div>
    {% endif %}
    
    {% if product.metafields.custom.base.value != blank %}
      <div class="product-metafields__item">
        <dt class="product-metafields__label">Base</dt>
        <dd class="product-metafields__value">{{ product.metafields.custom.base.value }}</dd>
      </div>
    {% endif %}
    
    {% if product.metafields.custom.area.value != blank %}
      <div class="product-metafields__item">
        <dt class="product-metafields__label">Area</dt>
        <dd class="product-metafields__value">{{ product.metafields.custom.area.value }}</dd>
      </div>
    {% endif %}
    
    {% if product.metafields.custom.front_height.value != blank %}
      <div class="product-metafields__item">
        <dt class="product-metafields__label">Front Height</dt>
        <dd class="product-metafields__value">{{ product.metafields.custom.front_height.value }}</dd>
      </div>
    {% endif %}
    
    {% if product.metafields.custom.front_base.value != blank %}
      <div class="product-metafields__item">
        <dt class="product-metafields__label">Front Base</dt>
        <dd class="product-metafields__value">{{ product.metafields.custom.front_base.value }}</dd>
      </div>
    {% endif %}
    
    {% if product.metafields.custom.front_area.value != blank %}
      <div class="product-metafields__item">
        <dt class="product-metafields__label">Front Area</dt>
        <dd class="product-metafields__value">{{ product.metafields.custom.front_area.value }}</dd>
      </div>
    {% endif %}
    
    {% if product.metafields.custom.rear_height.value != blank %}
      <div class="product-metafields__item">
        <dt class="product-metafields__label">Rear Height</dt>
        <dd class="product-metafields__value">{{ product.metafields.custom.rear_height.value }}</dd>
      </div>
    {% endif %}
    
    {% if product.metafields.custom.rear_base.value != blank %}
      <div class="product-metafields__item">
        <dt class="product-metafields__label">Rear Base</dt>
        <dd class="product-metafields__value">{{ product.metafields.custom.rear_base.value }}</dd>
      </div>
    {% endif %}
    
    {% if product.metafields.custom.rear_area.value != blank %}
      <div class="product-metafields__item">
        <dt class="product-metafields__label">Rear Area</dt>
        <dd class="product-metafields__value">{{ product.metafields.custom.rear_area.value }}</dd>
      </div>
    {% endif %}
    
    {% if product.metafields.custom.brand_buying_guide.value != blank %}
      <div class="product-metafields__item">
        <dt class="product-metafields__label">Buying Guide</dt>
        <dd class="product-metafields__value">{{ product.metafields.custom.brand_buying_guide.value }}</dd>
      </div>
    {% endif %}
    
    {% if product.metafields.custom.rating_value.value != blank %}
      <div class="product-metafields__item">
        <dt class="product-metafields__label">Rating</dt>
        <dd class="product-metafields__value">{{ product.metafields.custom.rating_value.value }}</dd>
      </div>
    {% endif %}
    
    {% if product.metafields.custom.review_count.value != blank %}
      <div class="product-metafields__item">
        <dt class="product-metafields__label">Reviews</dt>
        <dd class="product-metafields__value">{{ product.metafields.custom.review_count.value }}</dd>
      </div>
    {% endif %}
  </dl>
</div>

{% stylesheet %}
  .product-metafields {
    width: 100%;
  }
  
  .product-metafields__heading {
    margin-bottom: var(--margin-sm);
  }
  
  .product-metafields__list {
    display: grid;
    gap: var(--gap-xs);
    margin: 0;
  }
  
  .product-metafields__item {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--gap-md);
    padding: var(--padding-xs) 0;
    border-bottom: 1px solid rgb(var(--color-foreground-rgb) / var(--opacity-10));
  }
  
  .product-metafields__item:last-child {
    border-bottom: none;
  }
  
  .product-metafields__label {
    font-weight: var(--font-weight-semibold);
    color: rgb(var(--color-foreground-rgb) / var(--opacity-70));
    flex-shrink: 0;
  }
  
  .product-metafields__value {
    margin: 0;
    text-align: right;
    max-width: 65%;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product specs",
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "Displays custom metafields from the product."
    },
    {
      "type": "checkbox",
      "id": "show_heading",
      "label": "Show heading",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Specifications"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h4", "label": "Small" },
        { "value": "h3", "label": "Medium" },
        { "value": "h2", "label": "Large" }
      ],
      "default": "h4"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Product specs",
      "category": "Product"
    }
  ]
}
{% endschema %}
