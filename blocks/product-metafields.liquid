{% comment %}
  PRODUCT METAFIELDS DISPLAY
  ==========================
  Renders all custom metafields that have values for this product.
  
  The metafield_keys list is synced from Shopify via sync_metafield_keys.py
  Run that script whenever you add new metafield definitions.
{% endcomment %}

{% liquid
  assign product = closest.product
  if product == blank and request.visual_preview_mode
    assign product = collections.all.products.first
  endif
  
  # SYNCED FROM SHOPIFY - run sync_metafield_keys.py to update this list
  assign metafield_keys = 'designer_name,designer_origin,designer_bio,fin_construction,height,base,area,front_height,front_base,front_area,rear_height,rear_base,rear_area,brand_buying_guide,availability,rating_value,review_count' | split: ','
  
  # Build array of metafields that have values
  assign visible_metafields = '' | split: ','
  for key in metafield_keys
    assign mf = product.metafields.custom[key]
    if mf.value != blank
      assign visible_metafields = visible_metafields | push: key
    endif
  endfor
%}

{% if visible_metafields.size > 0 %}
  <div 
    class="product-metafields"
    {{ block.shopify_attributes }}
  >
    {% if block.settings.show_heading and block.settings.heading != blank %}
      <h3 class="product-metafields__heading {{ block.settings.heading_size }}">
        {{ block.settings.heading }}
      </h3>
    {% endif %}
    
    <dl class="product-metafields__list">
      {% for key in visible_metafields %}
        {% assign mf = product.metafields.custom[key] %}
        <div class="product-metafields__item">
          <dt class="product-metafields__label">
            {{ key | replace: '_', ' ' | replace: 'bio', 'Bio' | replace: 'name', 'Name' | replace: 'origin', 'Origin' | capitalize }}
          </dt>
          <dd class="product-metafields__value">
            {% case mf.type %}
              {% when 'boolean' %}
                {% if mf.value %}Yes{% else %}No{% endif %}
              {% when 'list.single_line_text_field' %}
                {{ mf.value | join: ', ' }}
              {% when 'multi_line_text_field' %}
                {{ mf.value | newline_to_br }}
              {% when 'rich_text_field' %}
                {{ mf.value | metafield_tag }}
              {% else %}
                {{ mf.value }}
            {% endcase %}
          </dd>
        </div>
      {% endfor %}
    </dl>
  </div>
{% endif %}

{% stylesheet %}
  .product-metafields {
    width: 100%;
  }
  
  .product-metafields__heading {
    margin-bottom: var(--margin-sm);
  }
  
  .product-metafields__list {
    display: grid;
    gap: var(--gap-xs);
    margin: 0;
  }
  
  .product-metafields__item {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--gap-md);
    padding: var(--padding-xs) 0;
    border-bottom: 1px solid rgb(var(--color-foreground-rgb) / var(--opacity-10));
  }
  
  .product-metafields__item:last-child {
    border-bottom: none;
  }
  
  .product-metafields__label {
    font-weight: var(--font-weight-semibold);
    color: rgb(var(--color-foreground-rgb) / var(--opacity-70));
    flex-shrink: 0;
  }
  
  .product-metafields__value {
    margin: 0;
    text-align: right;
    max-width: 65%;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product specs",
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "Displays custom metafields. Run sync_metafield_keys.py to update field list."
    },
    {
      "type": "checkbox",
      "id": "show_heading",
      "label": "Show heading",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Specifications"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h4", "label": "Small" },
        { "value": "h3", "label": "Medium" },
        { "value": "h2", "label": "Large" }
      ],
      "default": "h4"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Product specs",
      "category": "Product"
    }
  ]
}
{% endschema %}
